<html ng-app="questionaireApp" ng-controller="questionaireCtrl">
<head>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/Angular/QuestionaireCtrl.js"></script>
    <title>{{questionaires1.QuestionnaireTitle}}</title>
</head>
<body>
    <div>

        <form name="questionnaireForm" class="form">
            <div role="alert">
                <span class="error" ng-show="questionnaireForm.input.$error.required">
                    Required!
                </span>
            </div>
            <article class="well well-lg ng-scope">
                <p class="lead ng-binding">{{questionaires1.QuestionnaireTitle}}</p>
                <ul class="list-unstyled">
                    <li ng-repeat="questionText in questionaires1.QuestionsText" class="list-group-item">
                        <div>
                            <label>{{questionText}} <input type="text" name="{{questionText}}" ng-model="answerText" required /> </label>

                            <div ng-repeat="answer in questionaires.answers | filter:{QuestionsText:questionText}" class="hidden">
                                <ul class="list-unstyled">
                                    <li ng-repeat="answerText in answer.AnswersText">
                                        <label class="">
                                            <input type="text" name="{{questionText}}" ng-model="answerText" required />
                                        </label>
                                    </li>
                                </ul>
                            </div>

                        </div>
                    </li>
                </ul>
            </article>


            <button ng-disabled="questionnaireForm.$invalid">Submit</button>
        </form>
    </div>

</body>
</html>
